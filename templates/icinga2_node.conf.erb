// defines the Host as "<%= @fqdn %>" as residing at ip address "<%= @ipaddress %>"
object Host "<%= @fqdn %>" {
  import "generic-host"

  address = "<%= @ipaddress %>"
  check_command = "hostalive"

  vars.lan = "<%= @domain %>"
}

// This services uses "check_nrpe" to connect to port 5666 of the targeted "<%= @fqdn %>" hosts and has it execute the "alias_cpu" alias
object Service "load" {
  import "generic-service"

  host_name = "<%= @fqdn %>"
  check_command = "check_nrpe"
  vars.remote_check_nrpe_command = "alias_cpu"
}

